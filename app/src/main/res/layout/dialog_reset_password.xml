            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <com.vibescom.kutanga.View.PREditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_lock_black_24dp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"
                    android:hint="@string/password"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/dim_black"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:background="@drawable/canvas_edittext_round_bg"
                    android:textSize="@dimen/_12sdp"/>

                <ImageButton
                    android:id="@+id/ib_visible_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@null"
                    android:focusable="true"
                    android:clickable="true"
                    android:tint="@color/dark_grey"
                    android:src="@drawable/ic_visibility_off"
                    android:contentDescription="@string/app_name"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <com.vibescom.kutanga.View.PREditText
                    android:id="@+id/et_Conpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_lock_black_24dp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"
                    android:hint="@string/con_password"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/dim_black"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:background="@drawable/canvas_edittext_round_bg"
                    android:textSize="@dimen/_12sdp"/>

                <ImageButton
                    android:id="@+id/ib_visible_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@null"
                    android:focusable="true"
                    android:clickable="true"
                    android:tint="@color/dark_grey"
                    android:src="@drawable/ic_visibility_off"
                    android:contentDescription="@string/app_name"/>

            </FrameLayout>

            <com.vibescom.kutanga.View.PMButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/canvas_forgot_btn_bg"
                android:text="@string/forgot_submit"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/resend"
                android:visibility="gone"
                android:textColor="@color/theme_color"
                android:textAllCaps="false"
                android:textSize="@dimen/_12sdp"/>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_close"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:src="@drawable/ic_close"
            android:tint="@color/theme_color" />


    </RelativeLayout>

</RelativeLayout>