<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/_2sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    android:padding="@dimen/_2sdp"
    android:layout_marginTop="@dimen/_5sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_cart_food"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_black_24dp"></de.hdodenhof.circleimageview.CircleImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.vibescom.kutanga.View.PRTextView
                android:id="@+id/txt_cart_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/ll_customize"
                android:text="Entradas"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                tools:ignore="RelativeOverlap" />


                <LinearLayout
                    android:id="@+id/ll_customize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="horizontal">
                <com.vibescom.kutanga.View.PRTextView
                    android:id="@+id/txt_customize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cutomize"
                    android:textSize="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:textColor="@color/user_theme_color"
                    tools:ignore="RelativeOverlap" />
                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/white"
                        android:background="@color/user_theme_color"
                        android:src="@drawable/ic_edit_24px"></ImageView>
                </LinearLayout>
            </RelativeLayout>
            <com.vibescom.kutanga.View.PRTextView
                android:id="@+id/txt_cart_food_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chicken seared in red palm oil,then steward with pumpkin"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/dim_grey"
                tools:ignore="RelativeOverlap" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">

                <com.vibescom.kutanga.View.PRTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preparation Time:"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/dark_grey"
                    tools:ignore="RelativeOverlap" />
                <com.vibescom.kutanga.View.PRTextView
                    android:id="@+id/txt_preparation_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textSize="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:textColor="@color/green"
                    tools:ignore="RelativeOverlap" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <com.vibescom.kutanga.View.PRTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kz"
                        android:visibility="gone"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/light_pink"
                        tools:ignore="RelativeOverlap" />
                    <com.vibescom.kutanga.View.PRTextView
                        android:id="@+id/txt_cart_food_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200"
                        android:textSize="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:textColor="@color/light_pink"
                        tools:ignore="RelativeOverlap" />
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_cart_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_remove_circle_24px"
                    tools:ignore="RelativeOverlap" />
                <com.vibescom.kutanga.View.PRTextView
                    android:id="@+id/txt_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    tools:ignore="RelativeOverlap" />
                <ImageView
                    android:id="@+id/img_cart_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_add_circle_24px"
                    tools:ignore="RelativeOverlap"  />
            </LinearLayout>

                <com.vibescom.kutanga.View.PRTextView
                    android:id="@+id/txt_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remove"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
