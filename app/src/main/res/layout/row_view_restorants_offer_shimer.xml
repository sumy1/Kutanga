<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_3sdp"
    android:layout_marginRight="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:layout_alignParentTop="true">

        <View
            android:id="@+id/iv_banner"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/app_desc"
            android:background="@color/shimmer_background"
            android:scaleType="centerCrop"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_banner"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/txt_rating"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <View
                android:id="@+id/txt_res_name"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_alignParentStart="true"
                android:text="Cena Chill Out"
                android:background="@color/shimmer_background"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />
            <View
                android:id="@+id/txt_min_order"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_alignParentEnd="true"
                android:text="8500Kz"
                android:background="@color/shimmer_background"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

            <View
                android:id="@+id/txt_des"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_8sdp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@color/shimmer_background"
                android:text="Chicken seared in red palm,then steward in pumkin"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_gravity="left|center_vertical"
                    android:background="@color/shimmer_background" />

                <View
                    android:id="@+id/txt_discount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:background="@color/shimmer_background"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:text="20% off an order above kz500"
                    android:textColor="@color/light_pink"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:visibility="gone"
                    android:orientation="horizontal">
                <com.vibescom.kutanga.View.PRTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/preparation_time"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="@dimen/_8sdp" />
                    <com.vibescom.kutanga.View.PRTextView
                        android:id="@+id/txt_prepration_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="30min"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textColor="@color/green"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <com.vibescom.kutanga.View.PRTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/popularity"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp" />
                    <com.vibescom.kutanga.View.PRTextView
                        android:id="@+id/txt_popularity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="7/10"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textColor="@color/green"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>