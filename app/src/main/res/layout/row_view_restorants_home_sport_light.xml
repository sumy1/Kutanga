<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_220sdp"
    android:layout_height="@dimen/_200sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:layout_marginEnd="@dimen/_3sdp"
    android:layout_marginStart="@dimen/_3sdp"
    android:background="@drawable/relative_rate_review_style"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_3sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:background="@drawable/canvas_image_top_curve_bg"
            android:contentDescription="@string/app_desc"
            android:scaleType="fitXY"
            android:src="@drawable/ic_image_black_24dp" />
        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_banner"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/profile_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_toLeftOf="@+id/rate_layout"
                android:orientation="vertical"
                >

                <com.vibescom.kutanga.View.PRTextView
                    android:id="@+id/tv_rest_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Round On Marathon"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/location"></ImageView>
                    <com.vibescom.kutanga.View.PRTextView
                        android:id="@+id/tv_venue_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:text="Noida Cricket Stadium, Noida,hdsadsdsafsahfisafsahfsafsaf"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rate_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:id="@+id/ll_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_starr_24px"></ImageView>
                    <TextView
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:gravity="center_vertical"
                        android:text="4.3"
                        android:textColor="@color/dim_grey"
                        android:textSize="@dimen/_10sdp"></TextView>
                </LinearLayout>

                <!--  <RatingBar
                      android:id="@+id/ratingBar"
                      style="@style/Widget.AppCompat.RatingBar.Small"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="right"
                      android:isIndicator="true"
                      android:numStars="5"
                      android:progressTint="@color/light_pink"
                      android:rating="1.0"
                      android:scaleX=".9"
                      android:scaleY=".8"
                      android:transformPivotX="1dp"
                      android:transformPivotY="1dp" />-->
                <LinearLayout
                    android:id="@+id/ll_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <com.vibescom.kutanga.View.PRTextView
                        android:id="@+id/tv_review_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="@color/dim_grey"
                        android:textSize="@dimen/_8sdp" />

                    <com.vibescom.kutanga.View.PRTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Review"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textColor="@color/dim_grey"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>



            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:orientation="horizontal">

            <com.vibescom.kutanga.View.PRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/restorants_type"
                android:textColor="@color/dim_grey"
                android:textSize="@dimen/_8sdp" />

            <com.vibescom.kutanga.View.PRTextView
                android:id="@+id/tv_resturantsType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/_2sdp"
                android:text="Bar, Cafe"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mid"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.vibescom.kutanga.View.PRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minOder"
                android:layout_gravity="center_vertical"
                android:textColor="@color/dim_grey"
                android:textSize="@dimen/_8sdp" />

            <com.vibescom.kutanga.View.PRTextView
                android:id="@+id/txt_min_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:text="40 Kg"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp" />

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/scooter"></ImageView>

            <com.vibescom.kutanga.View.PRTextView
                android:id="@+id/txt_min_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="30 mins"
                android:textColor="@color/dim_grey"
                android:textSize="@dimen/_8sdp" />
        </LinearLayout>




    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>