<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@android:color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:background="@color/white"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_7sdp"
                android:paddingTop="@dimen/_7sdp"
                android:background="@drawable/canvas_language_selection_bg"
                android:orientation="horizontal">
                <com.vibescom.kutanga.View.PMTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_12sdp"
                    android:text="Select Language"></com.vibescom.kutanga.View.PMTextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="vertical">

               <RelativeLayout
                   android:id="@+id/rl_english"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1">

                   <LinearLayout
                       android:id="@+id/ll_english"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:paddingBottom="@dimen/_7sdp"
                       android:paddingTop="@dimen/_7sdp"
                       android:layout_alignParentStart="true"
                       android:layout_centerVertical="true"
                       android:orientation="horizontal">

                       <ImageView
                           android:layout_width="@dimen/_30sdp"
                           android:layout_height="@dimen/_20sdp"
                           android:layout_marginLeft="@dimen/_10sdp"
                           android:src="@drawable/english_img"></ImageView>
                       <com.vibescom.kutanga.View.PMTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/dim_grey"
                           android:layout_marginLeft="@dimen/_10sdp"
                           android:layout_marginRight="@dimen/_10sdp"
                           android:layout_gravity="center_horizontal"
                           android:gravity="center_vertical"
                           android:textSize="@dimen/_12sdp"
                           android:text="English"></com.vibescom.kutanga.View.PMTextView>

                   </LinearLayout>

                   <RadioButton
                       android:id="@+id/rb_english"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentEnd="true"
                       android:checked="true"
                       android:layout_marginRight="@dimen/_10sdp"
                       android:layout_centerVertical="true"></RadioButton>

               </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/light_grey"></View>

                <RelativeLayout
                    android:id="@+id/rl_french"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/ll_french"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_7sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:src="@drawable/french_img"></ImageView>
                        <com.vibescom.kutanga.View.PMTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dim_grey"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_12sdp"
                            android:text="French"></com.vibescom.kutanga.View.PMTextView>

                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rb_french"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_centerVertical="true"></RadioButton>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/light_grey"></View>

                <RelativeLayout
                    android:id="@+id/rl_purtgal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_7sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:src="@drawable/purtgal_imge"></ImageView>
                        <com.vibescom.kutanga.View.PMTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dim_grey"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_12sdp"
                            android:text="Portuguese"></com.vibescom.kutanga.View.PMTextView>

                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rb_portgal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_centerVertical="true"></RadioButton>

                </RelativeLayout>

                <com.vibescom.kutanga.View.PMTextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/canvas_signin_btn_bg"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/confirm"></com.vibescom.kutanga.View.PMTextView>

            </LinearLayout>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>