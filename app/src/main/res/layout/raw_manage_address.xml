<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_4sdp"
    android:layout_marginStart="@dimen/_4sdp"
    android:background="@color/white"
  >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_cart_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_home"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">

            <com.vibescom.kutanga.View.PRTextView
                android:id="@+id/txt_cart_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entradas"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                tools:ignore="RelativeOverlap" />
            <com.vibescom.kutanga.View.PRTextView
                android:id="@+id/txt_cart_food_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noida Sector 8,E Block "
                android:textColor="@color/dim_grey"
                android:textSize="@dimen/_10sdp"
                tools:ignore="RelativeOverlap" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.vibescom.kutanga.View.PRTextView
                    android:id="@+id/txt_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="@string/edit"
                    android:textColor="@color/light_pink"
                    android:textSize="@dimen/_10sdp"
                    tools:ignore="RelativeOverlap" />

                <com.vibescom.kutanga.View.PRTextView
                    android:id="@+id/txt_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_2sdp"
                    android:paddingRight="@dimen/_2sdp"
                    android:text="@string/delete"
                    android:textColor="@color/light_pink"
                    android:textSize="@dimen/_10sdp"
                    tools:ignore="RelativeOverlap" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
