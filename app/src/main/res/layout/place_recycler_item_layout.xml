<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/place_item_view">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/_5sdp">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingStart="@dimen/_5sdp"
        android:src="@drawable/location"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_back"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.vibescom.kutanga.View.PMTextView
            android:id="@+id/txt_city_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/black"
            android:text="@string/set_delivery_locationn"></com.vibescom.kutanga.View.PMTextView>

        <com.vibescom.kutanga.View.PMTextView
            android:id="@+id/txt_city_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-7dp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/semi_white"
            android:text="Noida 62 Block B"
             />
    </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/top"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:background="@color/semi_white"></View>
</RelativeLayout>