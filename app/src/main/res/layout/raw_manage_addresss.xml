<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_4sdp"
    android:layout_marginStart="@dimen/_4sdp"
    android:background="@color/white"
  >


    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/img_cart_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_centerVertical="true"
            ></CheckBox>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@+id/img_cart_food"
            android:orientation="vertical">

            <com.vibescom.kutanga.View.PRTextView
                android:id="@+id/txt_cart_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entradas"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                tools:ignore="RelativeOverlap" />
            <com.vibescom.kutanga.View.PRTextView
                android:id="@+id/txt_cart_food_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noida Sector 8,E Block "
                android:textColor="@color/dim_grey"
                android:textSize="@dimen/_8sdp"
                tools:ignore="RelativeOverlap" />



        </LinearLayout>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
