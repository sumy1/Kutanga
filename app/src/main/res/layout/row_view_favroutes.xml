<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_3sdp"
    android:layout_marginEnd="@dimen/_3sdp"
    android:layout_marginStart="@dimen/_3sdp"
    android:background="@drawable/relative_rate_review_style"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_3sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp">

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_image_black_24dp"
            android:contentDescription="@string/app_desc"
            android:scaleType="centerCrop"
            android:src="@drawable/res_pic" />

        <RelativeLayout
            android:id="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_banner"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/mid_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.vibescom.kutanga.View.PRTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/restorants_type"
                    android:textColor="@color/dim_grey"
                    android:textSize="@dimen/_8sdp" />

                <com.vibescom.kutanga.View.PRTextView
                    android:id="@+id/tv_restorants_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Bar,Cafe"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mib_bot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mid_top"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.vibescom.kutanga.View.PRTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/minOder"
                    android:textColor="@color/dim_grey"
                    android:textSize="@dimen/_8sdp" />

                <com.vibescom.kutanga.View.PRTextView
                    android:id="@+id/txt_min_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="40 Kg"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/scooter"></ImageView>
                <com.vibescom.kutanga.View.PRTextView
                    android:id="@+id/txt_min_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:text="30 mins"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mib_bot"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.vibescom.kutanga.View.PRTextView
                    android:id="@+id/tv_payment_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/dim_grey"
                    android:visibility="visible"
                    android:textSize="@dimen/_8sdp" />
                <com.vibescom.kutanga.View.PRTextView
                    android:id="@+id/txt_open_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/tv_payment_type"
                    android:visibility="visible"
                    android:textAllCaps="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_10sdp" />

                <com.vibescom.kutanga.View.PRTextView
                    android:id="@+id/txt_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remove"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/canvas_signin_btn_bg"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/rate_layout"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <com.vibescom.kutanga.View.PRTextView
                        android:id="@+id/tv_rest_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Round On Marathon"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/location"></ImageView>
                    <com.vibescom.kutanga.View.PRTextView
                        android:id="@+id/tv_venue_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:text="Noida Cricket Stadium, Noida"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_8sdp" />
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rate_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/ll_rat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_star_24px"></ImageView>
                    <com.vibescom.kutanga.View.PMTextView
                        android:id="@+id/tv_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:text="4.3"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                   <!-- <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:fillViewport="true"
                        android:progressTint="@color/light_pink"
                        android:rating="1.0"
                        android:scaleX=".9"
                        android:scaleY=".9"
                        android:transformPivotX="2dp"
                        android:transformPivotY="1dp" />-->
                    <LinearLayout
                        android:id="@+id/ll_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|right"
                        android:orientation="horizontal">

                        <com.vibescom.kutanga.View.PRTextView
                            android:id="@+id/tv_review_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_8sdp" />

                        <com.vibescom.kutanga.View.PRTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Review"
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_8sdp" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>





        </RelativeLayout>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>