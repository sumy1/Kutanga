<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/canvas_round_corner_white">


        <ImageView
            android:id="@+id/img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
			android:layout_alignParentTop="true"
			android:visibility="visible"
            android:src="@drawable/ic_error_outline_24px"
            android:contentDescription="@string/app_desc"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_close"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close"
            android:tint="@color/white"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="vertical">

            <com.vibescom.kutanga.View.PRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_gravity="center"
				android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:text="@string/laert_msgg"
                android:textColor="@color/dim_grey"
                android:textSize="@dimen/_12sdp"
               />



			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/_10sdp">
            <com.vibescom.kutanga.View.PMButton
                android:id="@+id/btn_yes"
                android:layout_width="wrap_content"
				android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
				android:layout_alignParentStart="true"
                android:background="@drawable/canvas_enguire_btn_bg_blue"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"/>

            <com.vibescom.kutanga.View.PRButton
                android:id="@+id/btn_no"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/_30sdp"
				android:layout_marginStart="@dimen/_20sdp"
				android:layout_marginEnd="@dimen/_20sdp"
				android:layout_alignParentEnd="true"
				android:background="@drawable/canvas_signup_normal_bg"
				android:text="@string/cancel"
				android:textColor="@color/white"
				android:textSize="@dimen/_12sdp"/>
			</RelativeLayout>
        </LinearLayout>

    </RelativeLayout>




</RelativeLayout>
