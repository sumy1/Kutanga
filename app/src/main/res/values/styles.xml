<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/white</item>
        <item name="floatingActionButtonStyle">@style/Widget.Design.FloatingActionButton</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/dim_grey</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="android:minHeight">@dimen/_5sdp</item>
        <item name="android:maxHeight">@dimen/_5sdp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dashboard" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:colorControlHighlight">@color/half_black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>




    <style name="spinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem"/>

    <style name="ProgressTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:windowBackground">@drawable/canvas_progressdialog</item>
    </style>

    <style name="AlertDialog.Holo" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowActionBarOverlay">false</item>
        <!--For compatibility-->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="windowActionBarOverlay">false</item>
    </style>
    <style name="MyActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
        <!--For compatibility-->
        <item name="background">@color/white</item>
    </style>
   <!-- <style name="MenuItems" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>-->

   <!-- <style name="formDropDown">
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:background">@drawable/canvas_dialog_bg</item>
        <item name="android:gravity">center_vertical</item>
    </style>-->

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">0.1dp</item>
        <item name="android:maxHeight">0.1dp</item>
        <item name="colorControlNormal">@color/light_pink</item>
        <item name="colorControlActivated">@color/light_pink</item>
    </style>

    <style name="TextView.InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

</resources>
